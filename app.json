{
  "expo": {
    "name": "sigmaNotiApp",
    "slug": "sigmaNotiApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/sigmalogo.jpeg",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/sigmalogo.jpeg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/sigmalogo.jpeg",
          "color": "#ffffff",
          "sounds": "./assets/sound/noti.mp3"
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.quang0211.sigmaNotiApp",
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "useNextNotificationsApi": true,
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/sigmalogo.jpeg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.quang0211.sigmaNotiApp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "cc4e9323-8b35-49aa-9825-7ed6fb37ba03"
      }
    }
  }
}
